<div class="main">
  <h2 id="title"><a href="https://github.com/evocount/ember-scanner">Ember-scanner</a> Demo</h2>

  {{!-- {{code-snippet name="code-scanner.hbs"}} --}}

  <div>
    <label for="device">Device:</label>
    <PowerSelect
      @options={{devices}}
      @selected={{device}}
      @onChange={{action (mut device)}}
      @searchEnabled={{false}}
      as |item|
    >
      {{item.label}}
    </PowerSelect>
  </div>

  <CodeScanner
    @device={{device.deviceId}}
    @onScanSuccess={{action (mut result)}}
    @onDevicesFound={{action (mut devices)}}
  />

  <p>Result: {{result.text}}</p>
</div>
